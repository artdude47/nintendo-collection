@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Collection.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <script>
        (function () 
        {
            const KEY = 'theme';
            const stored = localStorage.getItem(KEY);
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
            const theme = stored || (prefersDark ? 'dark' : 'light') || 'dark';
            document.documentElement.setAttribute('data-bs-theme', theme);

            //IF user hasn't chosen, follow system changes
            if (!stored && window.matchMedia) {
                window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
                            document.documentElement.setAttribute('data-bs-theme', e.matches ? 'dark' : 'light');
                });
            }

                    // Expose helpers for Blazor
              window.themeSet = function (t) {
                document.documentElement.setAttribute('data-bs-theme', t);
                localStorage.setItem(KEY, t);
                return t;
              };
              window.themeCycle = function () {
                const cur = document.documentElement.getAttribute('data-bs-theme') || 'light';
                const next = cur === 'dark' ? 'light' : 'dark';
                return window.themeSet(next);
              };
              window.themeUseSystem = function () {
                localStorage.removeItem(KEY);
                const dark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                const t = dark ? 'dark' : 'light';
                document.documentElement.setAttribute('data-bs-theme', t);
                return t;
              };
        })();
    </script>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
